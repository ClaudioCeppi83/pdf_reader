<Window x:Class="PDF_reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDF_reader"
        mc:Ignorable="d"
        Title="PDF Reader" Height="600" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Abrir" Click="OpenFile_Click"/>
            <Separator/>
            <Button Content="Anterior" Click="PreviousPage_Click"/>
            <Button Content="Siguiente" Click="NextPage_Click"/>
            <Separator/>
            <TextBlock x:Name="PageInfo" VerticalAlignment="Center"/>
        </ToolBar>
        <ScrollViewer>
            <WindowsFormsHost x:Name="WindowsFormsHost"/>
        </ScrollViewer>
    </DockPanel>
</Window>